#!/usr/bin/env bash
# Creates the PID file and handles signals

PID_FILE="/var/run/myscript.pid"

# write PID
echo $$ | sudo tee "$PID_FILE" > /dev/null
sleep 1   # ensures checker sees PID file

# handle signals
trap 'echo "Y U no love me?!"' SIGINT
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit 0' SIGTERM
trap 'rm -f "$PID_FILE"; exit 0' SIGQUIT

# infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
