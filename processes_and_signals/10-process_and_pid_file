#!/usr/bin/env bash
# Script creates /var/run/myscript.pid, prints messages indefinitely, and handles signals

PID_FILE="/var/run/myscript.pid"

# Write the PID to the file
echo "$$" > "$PID_FILE"

# SIGINT handler (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGTERM handler
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGQUIT handler
sigquit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

# Set traps
trap sigint_handler SIGINT
trap sigterm_handler SIGTERM
trap sigquit_handler SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
