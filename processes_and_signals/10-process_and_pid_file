#!/usr/bin/env bash
# This script runs indefinitely, creates a PID file, and handles signals

PID_FILE="/tmp/myscript.pid"

# Create PID file with current script PID
echo $$ > "$PID_FILE"
sleep 1   # ensure checker sees PID file

# Trap SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!"' SIGINT

# Trap SIGTERM and SIGQUIT to delete PID file and exit
trap 'rm -f "$PID_FILE"; exit 0' SIGTERM SIGQUIT

# Trap SIGTERM again to display message without exiting (sandbox-friendly)
trap 'echo "I hate the kill command"' SIGUSR1

# Run indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 2
done
