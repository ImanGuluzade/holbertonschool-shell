#!/usr/bin/env bash
# This script creates a PID file and handles multiple signals

PID_FILE="/tmp/myscript.pid"   # use /tmp instead of /var/run

# Create PID file
echo $$ > "$PID_FILE"

# Trap SIGTERM and SIGQUIT to delete PID file and terminate
trap 'rm -f "$PID_FILE"; exit' SIGTERM SIGQUIT

# Trap SIGTERM to display message
trap 'echo "I hate the kill command"' SIGTERM

# Trap SIGINT to display message
trap 'echo "Y U no love me?!"' SIGINT

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
